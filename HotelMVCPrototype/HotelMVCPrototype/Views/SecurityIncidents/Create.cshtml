@using HotelMVCPrototype.Models.Enums
@model CreateSecurityIncidentViewModel

<h4 class="mb-3">Report Security Incident</h4>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    @if (Model.RoomId != null)
    {
        <div class="mb-2">
            <strong>Room:</strong>
            <span class="badge bg-secondary">@Model.RoomId</span>
        </div>
        <input type="hidden" asp-for="RoomId" />
    }

    <div class="mb-3">
        <label class="form-label">Incident Type</label>
        <select asp-for="Type"
                asp-items="Html.GetEnumSelectList<SecurityIncidentType>()"
                class="form-select">
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Details (optional)</label>
        <textarea asp-for="Description"
                  class="form-control"
                  rows="3"></textarea>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">
            🚨 Submit Report
        </button>

        <a asp-action="Index" asp-controller="Reception"
           class="btn btn-secondary">
            Cancel
        </a>
    </div>
</form>
