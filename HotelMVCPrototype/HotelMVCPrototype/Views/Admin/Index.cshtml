@model List<UserWithRolesViewModel>

<h2 class="mb-4">Admin Dashboard</h2>

<div class="d-flex flex-wrap gap-3 mb-4 justify-content-center">
    <a asp-controller="Reception" asp-action="Index" class="role-tile tile-reception">
        Reception
    </a>

    <a asp-controller="Housekeeping" asp-action="Index" class="role-tile tile-housekeeping">
        Housekeeping
    </a>

    <a asp-controller="Bar" asp-action="Index" class="role-tile tile-bar">
        Bar
    </a>

    <a asp-controller="Maintenance" asp-action="Index" class="role-tile tile-maintenance">
        Maintenance
    </a>

    <a asp-controller="Security" asp-action="Index" class="role-tile tile-security">
        Security
    </a>
</div>


<a asp-action="CreateStaff" class="btn btn-success mb-3">Create Staff User</a>
<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <a asp-action="EditRoles" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
