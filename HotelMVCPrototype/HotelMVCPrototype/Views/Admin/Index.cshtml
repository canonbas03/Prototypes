@model List<UserWithRolesViewModel>

<h2>Admin Dashboard - Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <a asp-action="EditRoles" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit Roles</a>

                </td>
            </tr>
        }
    </tbody>
</table>
