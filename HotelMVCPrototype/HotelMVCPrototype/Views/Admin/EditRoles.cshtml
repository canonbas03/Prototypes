@model EditRolesViewModel

<h2>Edit Roles for @Model.Email</h2>

<form asp-action="EditRoles" method="post">
    <input type="hidden" asp-for="UserId" />

    @for (int i = 0; i < Model.Roles.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="Roles[i].RoleName" />
            <input class="form-check-input" asp-for="Roles[i].IsSelected" />
            <label class="form-check-label">@Model.Roles[i].RoleName</label>
        </div>
    }


    <button type="submit" class="btn btn-primary mt-2">Save</button>
</form>
