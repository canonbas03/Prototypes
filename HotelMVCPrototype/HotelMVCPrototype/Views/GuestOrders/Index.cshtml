@model List<HotelMVCPrototype.Models.MenuItem>
@{
    ViewData["Title"] = "Place Your Order";
}

<h2>Place Your Order</h2>

<form asp-action="PlaceOrder" method="post">
    <input type="hidden" name="roomId" value="1" /> <!-- replace with actual roomId -->

    <table class="table">
        <thead>
            <tr>
                <th>Select</th>
                <th>Item</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="menuItemIds" value="@Model[i].Id" />
                    </td>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].Price.ToString("C")</td>
                    <td>
                        <input type="number" name="quantities" value="1" min="1" class="form-control" style="width:70px;" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-success">Order</button>
</form>
