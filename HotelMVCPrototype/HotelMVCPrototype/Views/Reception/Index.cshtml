@model IEnumerable<HotelMVCPrototype.Models.Room>
@{
    ViewData["Title"] = "Reception Dashboard";
}

<h2>Reception Dashboard</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Room</th>
            <th>Type</th>
            <th>Status</th>
            <th>Guest</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>@room.Number</td>
                <td>@room.Type</td>
                <td>@room.Status</td>
                <td>
                    @if (room.GuestAssignments.Any())
                    {
                        @room.GuestAssignments.FirstOrDefault().GuestName
                    }
                    else
                    {
                        <span class="text-muted">—</span>
                    }
                </td>
                <td>
                    @if (room.Status == HotelMVCPrototype.Models.Enums.RoomStatus.Available)
                    {
                        <a asp-action="CheckIn" asp-route-roomId="@room.Id" class="btn btn-success btn-sm">Check-In</a>
                    }
                    else if (room.Status == HotelMVCPrototype.Models.Enums.RoomStatus.Occupied)
                    {
                        <a asp-controller="GuestAssignments" asp-action="CheckOut" asp-route-id="@room.GuestAssignments.FirstOrDefault()?.Id" class="btn btn-warning btn-sm">Check-Out</a>
                    }
                    else
                    {
                        <span class="text-muted">No actions</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
