    <div class="col-md-4" id="requests-container">
        <partial name="_ReceptionRequests" model="Model.NewRequests" />
    </div> *@

    <div class="col-md-4" id="requests-container">
        @await Component.InvokeAsync("ReceptionRequests")
    </div>


