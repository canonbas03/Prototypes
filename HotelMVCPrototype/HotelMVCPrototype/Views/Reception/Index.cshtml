</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.7/signalr.min.js"></script>

<script>
    const connection = new signalR.HubConnectionBuilder()
        .withUrl("/hotelHub")
        .build();

    connection.start().catch(err => console.error(err));
</script>
<script>
        connection.on("DndChanged", (roomId, isDnd) => {
        const room = document.getElementById(`room-${roomId}`);
        if (!room) return;

        let badge = room.querySelector(".dnd-badge");

        if (isDnd) {
            if (!badge) {
                badge = document.createElement("span");
                badge.className = "badge bg-warning text-black dnd-badge";
                badge.textContent = "DND";
                room.querySelector(".room-badges").appendChild(badge);
            }
        } else if (badge) {
            badge.remove();
        }
    });


    connection.on("NewRequest", async () => {
        const res = await fetch('/ReceptionRequests/PartialRequests');
        const html = await res.text();
        document.getElementById("requests-container").innerHTML = html;
    });

</script>

<script>
        connection.on("NewRequest", (roomId) => {
        const room = document.getElementById(`room-${roomId}`);
        if (!room) return;

        let badge = room.querySelector(".request-badge");

        if (!badge) {
            badge = document.createElement("span");
            badge.className = "badge bg-danger request-badge";
            badge.textContent = "🔔";
            room.querySelector(".room-badges").appendChild(badge);
        }
    });

        connection.on("RequestCompleted", (roomId) => {
        const room = document.getElementById(`room-${roomId}`);
        if (!room) return;

        const badge = room.querySelector(".request-badge");
        badge?.remove();
    });


</script>

<script>
        connection.on("RoomStatusChanged", data => {
        console.log("RoomStatusChanged payload:", data);

        const room = document.getElementById(`room-${data.roomId}`);
        if (!room) return;

        // Update room color
        room.style.backgroundColor = data.color;
        room.style.borderColor = data.color;

        // Update stats from the payload
        const stats = data.stats;
        if (stats) {
            updateStat("stat-available", stats.available);
            updateStat("stat-occupied", stats.occupied);
            updateStat("stat-cleaning", stats.cleaning);
            updateStat("stat-maintenance", stats.maintenance);
        }
    });

    // helper to update a stat element
    function updateStat(id, value) {
        const el = document.getElementById(id);
        if (!el) return;
        el.textContent = value;
    }
</script>


<audio id="newRequestSound" preload="auto">
    <source src="@Url.Content("~/sounds/notification-bar.mp3")" type="audio/mpeg" />
</audio>

<script>
    document.addEventListener("click", async () => {
        const sound = document.getElementById("newRequestSound");
        try {
            sound.volume = 0.8;
            await sound.play();
            sound.pause();
            sound.currentTime = 0;
            console.log("Reception audio unlocked ✅");
        } catch (e) {
            console.warn("Reception audio unlock failed:", e);
        }
    }, { once: true });
</script>
<script>
    connection.on("NewRequest", async (roomId) => {
        // 🔊 sound
        const sound = document.getElementById("newRequestSound");
        if (sound) {
            try {
                sound.currentTime = 0;
                await sound.play();
            } catch (err) {
                console.warn("Autoplay blocked (Reception)!", err);
            }
        }

        // 🔁 reload right-side requests card
        const res = await fetch('/ReceptionRequests/PartialRequests');
        const html = await res.text();
        const container = document.getElementById("requests-container");
        if (container) container.innerHTML = html;

        // 🔔 add badge on room (if roomId provided)
        if (roomId) {
            const room = document.getElementById(`room-${roomId}`);
            if (room) {
                let badge = room.querySelector(".request-badge");
                if (!badge) {
                    badge = document.createElement("span");
                    badge.className = "badge bg-danger text-white request-badge";
                    badge.textContent = "🔔";
                    room.querySelector(".room-badges").appendChild(badge);
                }
            }
        }
    });
</script>







