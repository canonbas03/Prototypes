@model HotelMVCPrototype.Models.ReceptionDashboardViewModel

@{
    ViewData["Title"] = "Reception Dashboard";
}

<h2>Reception Dashboard</h2>

<div class="row mb-4">
    <!-- Stats take more space -->
    <div class="col-md-8">
        <partial name="_RoomStatistics" model="Model.RoomStatistics" />

        <div class="floor-plan-container" style="position: relative; width: 1408px; height: 736px;">
            <img src="~/images/HotelFlooPlanF3Remastered.png" alt="Floor 1" style="width: 60%; " />

            <!-- Example room -->
            <div class="room" style="
        position: absolute;
        top: 30px;
        left: 52px;
        width: 90px;
        height: 155px;
        background-color: green; /* status: Available */
        opacity: 0.7;
        border: 2px solid #0F172A;
        text-align: center;
        line-height: 60px;
        color: white;
        font-weight: bold;
    ">
                101
            </div>
        </div>
    </div>

    <!-- Requests side window -->
    <div class="col-md-4">
        <partial name="_ReceptionRequests" model="Model.NewRequests" />
    </div>

   

</div>

<div class="floor-plan-container" style="position: relative; width: 1408px; height: 736px;">
    <img src="~/images/HotelFlooPlanF3Remastered.png" alt="Floor 1" style="width: 100%; height: 100%;" />
</div>


<!-- ===================== -->
<!-- ROOMS MODULE -->
<!-- ===================== -->
<div class="row">
    @foreach (var room in Model.Rooms)
    {
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">

                    <h5 class="card-title">
                        Room @room.Number
                    </h5>

                    <p class="mb-1">
                        <strong>Type:</strong> @room.Type
                    </p>

                    <p class="mb-1">
                        <strong>Status:</strong>
                        <span class="badge bg-secondary">@room.Status</span>
                    </p>

                    <p class="mb-3">
                        <strong>Guest:</strong>
                        @if (room.GuestAssignments.Any())
                        {
                            @room.GuestAssignments.First().GuestName
                        }
                        else
                        {
                            <span class="text-muted">—</span>
                        }
                    </p>

                    <!-- ACTIONS -->
                    @if (room.Status == HotelMVCPrototype.Models.Enums.RoomStatus.Available)
                    {
                        <a asp-action="CheckIn"
                           asp-route-roomId="@room.Id"
                           class="btn btn-success btn-sm">
                            Check-In
                        </a>
                    }
                    else if (room.Status == HotelMVCPrototype.Models.Enums.RoomStatus.Occupied)
                    {
                        <a asp-controller="GuestAssignments"
                           asp-action="CheckOut"
                           asp-route-id="@room.GuestAssignments.FirstOrDefault()?.Id"
                           class="btn btn-warning btn-sm">
                            Check-Out
                        </a>
                    }
                    else
                    {
                        <span class="text-muted">No actions</span>
                    }

                </div>
            </div>
        </div>
    }
</div>
