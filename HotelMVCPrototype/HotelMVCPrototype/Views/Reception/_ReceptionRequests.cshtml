@model List<HotelMVCPrototype.Models.ServiceRequest>

<div class="card shadow-sm">
    <div class="card-header bg-primary-action text-white">
        <strong>New Requests</strong>
    </div>

    <div class="card-body p-2">
        @if (!Model.Any())
        {
            <p class="text-muted mb-0">No new requests</p>
        }
        else
        {
            @foreach (var request in Model)
            {
                <div class="border-bottom py-2">
                    <strong>Room @request.Room.Number</strong>

                    <ul class="mb-1 ps-3">
                        @foreach (var item in request.Items)
                        {
                            <li>@item.ItemName × @item.Quantity</li>
                        }
                    </ul>

                    <small class="text-muted">
                        @request.CreatedAt.ToShortTimeString()
                    </small>
                </div>
            }
        }
    </div>
</div>
