@model List<RequestItem>

<h2>🛎️ Request Items – Room @ViewBag.RoomNumber</h2>

<form asp-action="PlaceRequest" method="post">
    <input type="hidden" name="roomId" value="@ViewBag.RoomId" />

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card mb-4 text-center">
                    <img src="@(item.ImagePath ?? "/images/placeholder.webp")"
                         class="card-img-top"
                         style="height:160px; object-fit:cover" />

                    <div class="card-body">
                        <h6>@item.Name</h6>

                        <input type="number"
                               name="items[@item.Id]"
                               value="0"
                               min="0"
                               class="form-control text-center"
                               style="width:80px; margin:auto;" />
                    </div>
                </div>
            </div>
        }
    </div>

    <button class="btn btn-primary btn-lg">
        Send Request
    </button>
</form>
