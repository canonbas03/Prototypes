@model List<RequestItem>

<h2>🛎️ Request Items – Room @ViewBag.RoomNumber</h2>

<form asp-action="PlaceRequest" method="post">
    <input type="hidden" name="roomId" value="@ViewBag.RoomId" />

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card mb-4 text-center">
                    <img src="@(item.ImagePath ?? "/images/placeholder.webp")"
                         class="card-img-top"
                         style="height:160px; object-fit:cover" />

                    <div class="card-body">
                        <h6>@item.Name</h6>

                        <div class="d-flex align-items-center justify-content-center gap-2 mt-2">
                            <span class="fw-semibold">Quantity</span>

                            <div class="input-group input-group-sm" style="width:auto;">
                                <button type="button"
                                        id="minus-@item.Id"
                                        class="btn btn-outline-secondary"
                                        onclick="changeQty(@item.Id, -1)">
                                    −
                                </button>

                                <input type="text"
                                       id="qty-@item.Id"
                                       name="items[@item.Id]"
                                       value="0"
                                       class="form-control text-center bg-light"
                                       style="width:60px;"
                                       readonly
                                       data-max="@(item.MaxQuantity ?? 99)" />

                                <button type="button"
                                        id="plus-@item.Id"
                                        class="btn btn-primary"
                                        onclick="changeQty(@item.Id, 1)">
                                    +
                                </button>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        }
    </div>

    <div class="d-flex justify-content-center mt-4">
        <button id="submitBtn" class="btn btn-primary btn-lg">
            Send Request
        </button>
    </div>

</form>

<script>
    document.addEventListener("DOMContentLoaded", () => {

        const submitBtn = document.getElementById("submitBtn");
        if (!submitBtn) return;

        function updateSubmitButton() {
            const qtyInputs = document.querySelectorAll("input[id^='qty-']");
            let hasQty = false;

            qtyInputs.forEach(input => {
                const value = parseInt(input.value) || 0;
                if (value > 0) hasQty = true;
            });

            submitBtn.style.display = hasQty ? "inline-block" : "none";
        }

        // Attach change events to quantity inputs
        document.querySelectorAll("input[id^='qty-']").forEach(input => {
            input.addEventListener("change", updateSubmitButton);
        });

        // Initialize button visibility
        updateSubmitButton();

        // Your increment/decrement function
        window.changeQty = function(id, delta) {
            const input = document.getElementById(`qty-${id}`);
            const minusBtn = document.getElementById(`minus-${id}`);
            const plusBtn = document.getElementById(`plus-${id}`);

            const min = 0;
            const max = parseInt(input.dataset.max) || 99;

            let value = parseInt(input.value) || 0;
            value = Math.min(max, Math.max(min, value + delta));
            input.value = value;

            updateSubmitButton(); // Show/hide submit button
        };
    });
</script>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        // Find existing header / navbar
        const header = document.querySelector("header");
        if (!header) return;

        // Replace it with guest-style header
        header.outerHTML = `
            <header class="guest-header text-center py-3">
                <a href="/">
                    <img src="/images/le-vins-logo.png"
                         alt="Hotel Logo"
                         class="guest-logo" />
                </a>
            </header>
        `;
    });
</script>


