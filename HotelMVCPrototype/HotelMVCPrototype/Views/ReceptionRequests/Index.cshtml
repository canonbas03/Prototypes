@model ReceptionRequestsIndexViewModel


<h4 class="mb-3">Guest Requests</h4>

@if (Model.NewRequests == null || !Model.NewRequests.Any())
{
    <div class="alert alert-secondary text-center">
        No active guest requests
    </div>
}
else
{
    <div class="list-group shadow-sm">
        <div class="card-header">
            <strong>Active Requests</strong>
        </div>
        @foreach (var req in Model.NewRequests)
        {
            <div class="list-group-item p-3">
                <div class="d-flex justify-content-between align-items-start">

                    <div>
                        <h6 class="mb-1">
                            Room <span class="badge bg-primary">@req.Room.Number</span>
                        </h6>

                        <ul class="mb-1 ps-3">
                            @foreach (var item in req.Items)
                            {
                                <li>@item.RequestItem.Name × @item.Quantity</li>
                            }
                        </ul>

                        <small class="text-muted">
                            Requested at @req.CreatedAt.ToShortTimeString()
                        </small>
                    </div>

                    <button class="btn btn-success btn-sm"
                            onclick="completeRequest(@req.Id)">
                        ✓ Done
                    </button>


                </div>
            </div>
        }
    </div>


    


}
<div class="card shadow-sm">
    <div class="card-header">
        <strong>Fulfilled Requests (History)</strong>
    </div>

    <div class="card-body p-2">
        @if (!Model.CompletedRequests.Any())
        {
            <p class="text-muted text-center mb-0">
                No fulfilled requests yet
            </p>
        }
        else
        {
            <div class="list-group">
                @foreach (var req in Model.CompletedRequests)
                {
                    <div class="list-group-item p-3">

                        <!-- TOP ROW -->
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div class="d-flex align-items-center gap-3">
                                <h6 class="mb-0">
                                    Room <span class="badge bg-secondary">@req.Room.Number</span>
                                </h6>

                                <small class="text-muted">
                                    Requested @req.CreatedAt.ToShortTimeString()
                                </small>

                                @if (req.CompletedAt != null)
                                {
                                    <small class="text-success">
                                        Completed @req.CompletedAt.Value.ToShortTimeString()
                                    </small>
                                }
                            </div>
                        </div>

                        <!-- ITEMS -->
                        <ul class="mb-0 ps-3">
                            @foreach (var item in req.Items)
                            {
                                <li>@item.RequestItem.Name × @item.Quantity</li>
                            }
                        </ul>

                    </div>
                }
            </div>
        }
    </div>
</div>

<script>
    async function completeRequest(id) {
        const res = await fetch('/ReceptionRequests/Complete', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded'
            },
            body: `id=${id}`
        });

        if (res.ok) {

            location.reload();
        }
    }
</script>

