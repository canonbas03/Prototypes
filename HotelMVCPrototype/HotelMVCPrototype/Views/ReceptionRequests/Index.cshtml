@model List<HotelMVCPrototype.Models.ServiceRequest>

<h4 class="mb-3">Guest Requests</h4>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-secondary text-center">
        No active guest requests
    </div>
}
else
{
    <div class="list-group shadow-sm">
        @foreach (var req in Model)
        {
            <div class="list-group-item p-3">
                <div class="d-flex justify-content-between align-items-start">

                    <div>
                        <h6 class="mb-1">
                            Room <span class="badge bg-primary">@req.Room.Number</span>
                        </h6>

                        <ul class="mb-1 ps-3">
                            @foreach (var item in req.Items)
                            {
                                <li>@item.RequestItem.Name × @item.Quantity</li>
                            }
                        </ul>

                        <small class="text-muted">
                            Requested at @req.CreatedAt.ToShortTimeString()
                        </small>
                    </div>

                    <form asp-action="Complete" method="post" class="ms-3">
                        <input type="hidden" name="id" value="@req.Id" />
                        <button class="btn btn-success btn-sm">
                            ✓ Done
                        </button>
                    </form>

                </div>
            </div>
        }
    </div>
}
