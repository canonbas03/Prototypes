@model MenuItemCreateViewModel

<h2>Add Menu Item</h2>



<div class="row">
    <!-- Form -->
    <div class="col-md-7">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label>Name</label>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="mb-3">
                <label>Price</label>
                <input asp-for="Price" class="form-control" />
            </div>

            <div class="mb-3">
                <label>Category</label>
                <select asp-for="Category"
                        asp-items="Html.GetEnumSelectList<MenuCategory>()"
                        class="form-control">
                </select>
            </div>

            <div class="form-check mb-3">
                <input asp-for="IsVegan" class="form-check-input" />
                <label class="form-check-label">Vegan</label>
            </div>

            <div class="mb-3">
                <label>Image</label>
                <input asp-for="Image" type="file" class="form-control" />
            </div>

            <button class="btn btn-success">Save</button>
        </form>
    </div>

    <!-- Live Preview -->
    <div class="col-md-5">
        <div class="card shadow-sm sticky-top" style="top: 20px;">
            <img id="previewImage"
                 src="/images/menu/placeholder.webp"
                 class="card-img-top"
                 style="height: 200px; object-fit: cover;" />

            <div class="card-body">
                <h5 id="previewName">Item Name</h5>

                <p class="mb-1">
                    <strong id="previewPrice">0.00 лв.</strong>
                </p>

                <span id="previewCategory"
                      class="badge bg-secondary">
                    Category
                </span>

                <span id="previewVegan"
                      class="badge bg-success ms-2 d-none">
                    Vegan 🌱
                </span>
            </div>
        </div>
    </div>
</div>
<script>
    const nameInput = document.querySelector('[name="Name"]');
    const priceInput = document.querySelector('[name="Price"]');
    const categoryInput = document.querySelector('[name="Category"]');
    const veganInput = document.querySelector('[name="IsVegan"]');
    const imageInput = document.getElementById('Image');

    nameInput.addEventListener('input', e => {
        document.getElementById('previewName').innerText =
            e.target.value || 'Item Name';
    });

    priceInput.addEventListener('input', e => {
        document.getElementById('previewPrice').innerText =
            e.target.value
                ? `${Number(e.target.value).toFixed(2)} лв.`
                : '0.00 лв.';
    });

    categoryInput.addEventListener('change', e => {
        document.getElementById('previewCategory').innerText =
            e.target.options[e.target.selectedIndex].text;
    });

    veganInput.addEventListener('change', e => {
        document.getElementById('previewVegan')
            .classList.toggle('d-none', !e.target.checked);
    });

    imageInput?.addEventListener('change', e => {
        const file = e.target.files[0];
        if (!file) return;

        const reader = new FileReader();
        reader.onload = ev => {
            document.getElementById('previewImage').src = ev.target.result;
        };
        reader.readAsDataURL(file);
    });
</script>

