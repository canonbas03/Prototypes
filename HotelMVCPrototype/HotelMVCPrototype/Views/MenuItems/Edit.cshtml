@model MenuItem

@{
    ViewData["Title"] = "Edit Menu Item";
}

<h2>Edit Menu Item</h2>



<div class="row">
    <!-- Form -->
    <div class="col-md-7">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Category" class="form-label"></label>
                <select asp-for="Category"
                        asp-items="Html.GetEnumSelectList<MenuCategory>()"
                        class="form-control">
                </select>
            </div>

            <div class="form-check mb-3">
                <input asp-for="IsVegan" class="form-check-input" />
                <label asp-for="IsVegan" class="form-check-label">Vegan</label>
            </div>

            <div class="form-check mb-3">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label">Active</label>
            </div>

            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <div class="mb-3">
                    <label class="form-label">Current Image</label><br />
                    <img src="@Model.ImagePath" width="50" class="rounded shadow-sm" />
                </div>
            }

            <div class="mb-3">
                <label class="form-label">Change Image</label>
                <input type="file" name="Image" id="Image" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">
                Save Changes
            </button>

            <a asp-action="Index" class="btn btn-secondary ms-2">
                Cancel
            </a>
        </form>
    </div>

    <!-- Live Preview -->
    <div class="col-md-5">
        <div class="card shadow-sm sticky-top" style="top: 20px;">
            <img id="previewImage"
                 src="@(string.IsNullOrEmpty(Model.ImagePath)
                             ? "/images/menu/placeholder.webp"
                             : Model.ImagePath)"
                 class="card-img-top"
                 style="height: 200px; object-fit: cover;" />


            <div class="card-body">
                <h5 id="previewName">Item Name</h5>

                <p class="mb-1">
                    <strong id="previewPrice">0.00 лв.</strong>
                </p>

                <span id="previewCategory"
                      class="badge bg-secondary">
                    Category
                </span>

                <span id="previewVegan"
                      class="badge bg-success ms-2 d-none">
                    Vegan 🌱
                </span>
            </div>
        </div>
    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", () => {

        const nameInput = document.querySelector('[name="Name"]');
        const priceInput = document.querySelector('[name="Price"]');
        const categoryInput = document.querySelector('[name="Category"]');
        const veganInput = document.querySelector('[name="IsVegan"]');
        const imageInput = document.getElementById('Image');

        const previewName = document.getElementById('previewName');
        const previewPrice = document.getElementById('previewPrice');
        const previewCategory = document.getElementById('previewCategory');
        const previewVegan = document.getElementById('previewVegan');
        const previewImage = document.getElementById('previewImage');

        /* 🔹 INITIALIZE PREVIEW FROM MODEL VALUES */
        previewName.innerText = nameInput.value || 'Item Name';

           const initialPrice = priceInput.value.replace(',', '.'); // ⚡ handle comma
    previewPrice.innerText = initialPrice
        ? `${parseFloat(initialPrice).toFixed(2)} лв.`
        : '0.00 лв.';


        previewCategory.innerText =
            categoryInput.options[categoryInput.selectedIndex].text;

        previewVegan.classList.toggle('d-none', !veganInput.checked);

        /* 🔹 LIVE UPDATES */
        nameInput.addEventListener('input', e => {
            previewName.innerText = e.target.value || 'Item Name';
        });

            priceInput.addEventListener('input', e => {
        const val = e.target.value.replace(',', '.'); // handle comma
        previewPrice.innerText = val
            ? `${parseFloat(val).toFixed(2)} лв.`
            : '0.00 лв.';
    });


        categoryInput.addEventListener('change', e => {
            previewCategory.innerText =
                e.target.options[e.target.selectedIndex].text;
        });

        veganInput.addEventListener('change', e => {
            previewVegan.classList.toggle('d-none', !e.target.checked);
        });

        /* 🔹 IMAGE PREVIEW (ONLY WHEN NEW FILE IS SELECTED) */
        imageInput?.addEventListener('change', e => {
            const file = e.target.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = ev => {
                previewImage.src = ev.target.result;
            };
            reader.readAsDataURL(file);
        });
    });
</script>
