@{
    Layout = "_GuestLayout";
    ViewData["Title"] = "How to Use Guest Services";
}

<div class="container py-4" style="max-width: 920px;">
    <h2 class="mb-2">Use Guest Services</h2>
    <p class="text-muted mb-4">
        To order food & drinks, request service, or enable Do Not Disturb, please scan the QR code in your room.
    </p>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="mb-2">1) Find the QR code</h5>
                    <p class="mb-3 text-muted">
                        You’ll find it on your room card or the stationery card inside the room.
                    </p>

                    <!-- Replace src later -->
                    <img src="/images/placeholder-qr-card.png"
                         class="img-fluid rounded"
                         style="width:100%; height:260px; object-fit:cover;"
                         alt="QR code on room card">
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="mb-2">2) Scan and open the link</h5>
                    <p class="mb-3 text-muted">
                        Your phone will open your room page automatically (Room number included).
                    </p>

                    <!-- Replace src later -->
                    <img src="/images/placeholder-scan-phone.png"
                         class="img-fluid rounded"
                         style="width:100%; height:260px; object-fit:cover;"
                         alt="Scanning QR with phone">
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="mb-2">What you can do after scanning</h5>

                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="p-3 rounded bg-background">
                                <strong>🍽 Order Food & Drinks</strong>
                                <div class="text-muted">Browse the menu and place an order.</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3 rounded bg-background">
                                <strong>🛎 Request Service</strong>
                                <div class="text-muted">Towels, housekeeping, assistance.</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3 rounded bg-background">
                                <strong>🔕 Do Not Disturb</strong>
                                <div class="text-muted">Toggle DND for your room.</div>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-secondary mt-4 mb-0">
                        If you don’t have a QR code, please contact Reception.
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
            Back to Welcome Page
        </a>
    </div>
</div>
