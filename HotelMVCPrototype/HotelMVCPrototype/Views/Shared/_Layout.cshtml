<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HotelMVCPrototype</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100 bg-background text-dark-moss">

    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary-action shadow-sm mb-3">
            <div class="container-fluid">
                @using Microsoft.AspNetCore.Http
                @{
                    bool isAdmin = User.IsInRole("Admin");

                    var claimRole = User.Claims.FirstOrDefault(c =>
                    c.Type == System.Security.Claims.ClaimTypes.Role)?.Value;

                    var activeRole = Context.Session.GetString("ActiveRole");

                    // Admin can "act as" a role using session, otherwise use claim role
                    var effectiveRole = (isAdmin && !string.IsNullOrWhiteSpace(activeRole))
                    ? activeRole
                    : claimRole;

                    var landingController = string.IsNullOrWhiteSpace(effectiveRole) ? "Home" : effectiveRole;

                    bool isReceptionMode = effectiveRole == "Reception";
                    bool isBarMode = effectiveRole == "Bar";
                    bool isHousekeepingMode = effectiveRole == "Housekeeping";
                    bool isMaintenanceMode = effectiveRole == "Maintenance";
                    bool isSecurityMode = effectiveRole == "Security";
                }

                <!-- Brand / Logo -->
                <a class="navbar-brand d-flex align-items-center me-4"
                   asp-controller="@landingController"
                   asp-action="Index">
                    <img src="~/images/le-vins-logo.png"
                         alt="Hotel Logo"
                         class="navbar-logo" />
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0 align-items-sm-center gap-sm-1">

                        <!-- Home -->
                        <li class="nav-item">
                            <a class="nav-link text-white"
                               asp-controller="@landingController"
                               asp-action="Index">
                                Home
                            </a>
                        </li>

                        <!-- Profile -->
                        <li class="nav-item">
                            <a class="nav-link text-white"
                               asp-controller="Profile"
                               asp-action="Index">
                                Profile
                            </a>
                        </li>

                            <!-- Admin-only links -->
                        @if (isAdmin)
                        {
                            <!-- Admin-only links -->
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Rooms" asp-action="Index">Rooms</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Admin" asp-action="Index">Roles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="AuditLogs" asp-action="Index">Audit Logs</a>
                            </li>
                        }

                        

                        <!-- Reception mode links -->
                        @if (isReceptionMode || isAdmin && effectiveRole == "Reception")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white"
                                   asp-controller="GuestAssignments"
                                   asp-action="Index">
                                    Guest Assignments
                                </a>
                            </li>
                        }

                        <!-- Bar mode links -->
                        @if (isBarMode)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white"
                                   asp-controller="MenuItems"
                                   asp-action="Index">
                                    Menu
                                </a>
                            </li>
                        }

                        <!-- Housekeeping mode links -->
                        @if (isHousekeepingMode)
                        {
                            <li class="nav-item">
                                <form asp-controller="Housekeeping"
                                      asp-action="StartHousekeepingDay"
                                      method="post"
                                      class="d-inline">
                                    @Html.AntiForgeryToken()

                                    <button type="submit"
                                            class="nav-link btn btn-link text-white p-0"
                                            onclick="return confirm('Start daily housekeeping for all rooms?');">
                                        Restart
                                    </button>
                                </form>
                            </li>
                        }

                        <!-- TODO: Maintenance / Security mode links can go here when you add them -->
                        @* Example:
                    @if (isMaintenanceMode) { ... }
                    @if (isSecurityMode) { ... }
                    *@

                        <!-- Report issue button (visible to everyone logged in) -->
                        <li class="nav-item ms-sm-2">
                            <a asp-controller="RoomIssues"
                               asp-action="Create"
                               asp-route-roomId=""
                               class="btn btn-danger btn-sm">
                                🚨
                            </a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center gap-2">

                        @if (isAdmin)
                        {
                            <div class="dropdown">
                                <a class="nav-link dropdown-toggle text-white px-2"
                                   href="#"
                                   role="button"
                                   data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    Mode: @(string.IsNullOrWhiteSpace(effectiveRole) ? "Admin" : effectiveRole)
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                    @foreach (var r in new[] { "Admin", "Reception", "Housekeeping", "Bar", "Maintenance", "Security" })
                                    {
                                        <li>
                                            <form asp-controller="Admin"
                                                  asp-action="SetActiveRole"
                                                  method="post">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="role" value="@r" />
                                                <input type="hidden" name="returnUrl"
                                                       value="@Context.Request.Path@Context.Request.QueryString" />

                                                <button type="submit" class="dropdown-item">
                                                    @r
                                                </button>
                                            </form>
                                        </li>
                                    }
                                </ul>
                            </div>
                        }

                        <partial name="_LoginPartial" />
                    </div>

                </div>
            </div>
        </nav>
    </header>

    <div class="container my-3">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


    @* <audio id="notifySound" src="~/sounds/notification-bar.mp3" preload="auto"></audio> *@

</body>
</html>
