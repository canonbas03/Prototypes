@model HotelMVCPrototype.Models.RoomStatisticsViewModel

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <h6>Available</h6>
                <h3 class="text-success">@Model.Available</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <h6>Occupied</h6>
                <h3 class="text-primary">@Model.Occupied</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <h6>Cleaning</h6>
                <h3 class="text-warning">@Model.Cleaning</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <h6>Maintenance</h6>
                <h3 class="text-danger">@Model.Maintenance</h3>
            </div>
        </div>
    </div>
</div>
