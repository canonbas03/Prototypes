@model HotelMVCPrototype.Models.RoomStatisticsViewModel

<div class="row" style="background-color:#F0F4F2; border-radius:10px;">
    <div class="col-md-3 mb-3">
        <div class="card text-center shadow-sm" style="background-color:#FFFFFF;">
            <div class="card-body">
                <h6 style="color:#0F172A;">Available</h6>
                <h3 style="color:#164E63;">@Model.Available</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card text-center shadow-sm" style="background-color:#FFFFFF;">
            <div class="card-body">
                <h6 style="color:#0F172A;">Occupied</h6>
                <h3 style="color:#86A789;">@Model.Occupied</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card text-center shadow-sm" style="background-color:#FFFFFF;">
            <div class="card-body">
                <h6 style="color:#0F172A;">Cleaning</h6>
                <h3 style="color:#D97706;">@Model.Cleaning</h3> <!-- muted amber -->
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card text-center shadow-sm" style="background-color:#FFFFFF;">
            <div class="card-body">
                <h6 style="color:#0F172A;">Maintenance</h6>
                <h3 style="color:#B91C1C;">@Model.Maintenance</h3> <!-- muted red -->
            </div>
        </div>
    </div>
</div>
