@model GuestInputViewModel

<div class="card mb-3 p-3">
    <div class="row">
        <div class="col">
            <input asp-for="FirstName" class="form-control" placeholder="First Name" />
        </div>
        <div class="col">
            <input asp-for="LastName" class="form-control" placeholder="Last Name" />
        </div>
    </div>

        <div class="row mt-2 align-items-center">
            <div class="col-md-6">
                <input asp-for="EGN" class="form-control" placeholder="EGN" />
            </div>
            <div class="col-md-6 d-flex align-items-center">
                <label asp-for="BirthDate" class="me-2 mb-0">Birthdate</label>
            <input asp-for="BirthDate" type="date" class="form-control" value="@(Model.BirthDate.ToString("yyyy-MM-dd"))" />
            </div>
        </div>

    <div class="row mt-2">
        <div class="col">
            <select asp-for="Sex" class="form-control">
                <option value="">Sex</option>
                <option>Female</option>
                <option>Male</option>
                <option>Other</option>
            </select>
        </div>
        <div class="col">
            <select asp-for="Nationality" class="form-control">
                <option value="">Select Nationality</option>
                @foreach (var nat in Enum.GetValues(typeof(Nationality)).Cast<Nationality>())
                {
                    <option value="@nat">@nat.GetDisplayName()</option>
                }
            </select>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col">
            <input asp-for="Phone" class="form-control" placeholder="Phone (optional)" />
        </div>
    </div>
</div>
