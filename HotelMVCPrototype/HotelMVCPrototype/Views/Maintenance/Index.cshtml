@model IEnumerable<RoomIssue>

@{
    ViewData["Title"] = "Maintenance Dashboard";
}

<h2>Rooms Needing Maintenance</h2>

@if (!Model.Any())
{
    <p class="text-muted">No rooms currently require maintenance.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Room</th>
                <th>Room Type</th>
                <th>Issue Type</th>
                <th>Notes</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td>@(i.Room?.Number.ToString() ?? "—")</td>
                    <td>@(i.Room?.Type.ToString() ?? "—")</td>
                    <td>@i.TypeKey</td>
                    <td class="text-muted">@(!string.IsNullOrWhiteSpace(i.Description) ? i.Description : "—")</td>
                    <td>
                        <form asp-action="MarkDone" method="post">
                            <input type="hidden" name="issueId" value="@i.Id" />
                            <button class="btn btn-success btn-sm">Mark Done</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
