@using HotelMVCPrototype.Models.Enums
@model IEnumerable<RoomIssue>

@{
    ViewData["Title"] = "Maintenance Dashboard";
}

<div class="d-flex align-items-center mb-3">
    <h2 class="mb-0">Rooms Needing Maintenance</h2>

    <a asp-controller="RoomIssues"
       asp-action="History"
       asp-route-category="Maintenance"
       class="btn btn-outline-secondary btn-sm ms-auto">
        🕘 History
    </a>
</div>



@if (!Model.Any())
{
    <p class="text-muted">No rooms currently require maintenance.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Room</th>
                <th>Room Type</th>
                <th>Status</th>
                <th>Issue Type</th>
                <th>Notes</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td>@(i.Room?.Number.ToString() ?? "—")</td>
                    <td>@(i.Room?.Type.ToString() ?? "—")</td>
                    <td>
                        @{
                            var badge =
                            i.Status == IssueStatus.New ? "bg-danger" :
                            i.Status == IssueStatus.InProgress ? "bg-warning text-dark" :
                            "bg-success";
                        }
                        <span class="badge @badge">@i.Status</span>
                    </td>
                    <td>@i.TypeKey</td>
                    <td class="text-muted">@(!string.IsNullOrWhiteSpace(i.Description) ? i.Description : "—")</td>
                    <td>
                        <div class="d-flex gap-2">
                            @if (i.Status == IssueStatus.New)
                            {
                                <form asp-action="Acknowledge" method="post" class="mb-0">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@i.Id" />
                                    <button class="btn btn-warning btn-sm">👀 Acknowledge</button>
                                </form>
                            }

                            @if (i.Status != IssueStatus.Resolved)
                            {
                                <form asp-action="Resolve" method="post" class="mb-0">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@i.Id" />
                                    <button class="btn btn-success btn-sm">✔ Resolve</button>
                                </form>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.7/signalr.min.js"></script>

    <audio id="newRequestSound" preload="auto">
        <source src="@Url.Content("~/sounds/notification-bar.mp3")" type="audio/mpeg" />
    </audio>

    <script>
        // Unlock audio after first click (required by browsers)
        document.addEventListener("click", async () => {
            const sound = document.getElementById("newRequestSound");
            if (!sound) return;

            try {
                sound.volume = 0.8;
                await sound.play();
                sound.pause();
                sound.currentTime = 0;
                console.log("Maintenance audio unlocked ✅");
            } catch (e) {
                console.warn("Maintenance audio unlock failed:", e);
            }
        }, { once: true });

        const hkConnection = new signalR.HubConnectionBuilder()
            .withUrl("/hotelHub")
            .withAutomaticReconnect()
            .build();

        hkConnection.on("RoomIssueCreated", async (data) => {
            console.log("✅ RoomIssueCreated received (HK):", data);

            const category = data.Category ?? data.category;
            if (category !== "Maintenance") return;

            // 🔊 play sound
            const sound = document.getElementById("newRequestSound");
            if (sound) {
                try {
                    sound.currentTime = 0;
                    await sound.play();
                } catch (err) {
                    console.warn("Autoplay blocked (HK)!", err);
                }
            }

            // 🔁 refresh
            setTimeout(() => location.reload(), 600);
        });

        hkConnection.start()
            .then(() => console.log("✅ SignalR connected (Maintenance)"))
            .catch(err => console.error("❌ SignalR connect failed (HK):", err));
    </script>
}