@using HotelMVCPrototype.Models.Enums
@model List<RoomIssue>


<div class="d-flex align-items-center mb-3">
    <h2 class="mb-0">Security Incidents</h2>

    <a asp-controller="RoomIssues"
       asp-action="History"
       asp-route-category="Security"
       class="btn btn-outline-secondary btn-sm ms-auto">
        🕘 History
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-secondary text-center">
        No security incidents reported
    </div>
}
else
{
    <div class="list-group shadow-sm">
        @foreach (var issue in Model)
        {
            var borderClass =
            issue.Status == IssueStatus.New ? "border-danger" :
            issue.Status == IssueStatus.InProgress ? "border-warning" :
            "border-success";

            var badgeClass =
            issue.Status == IssueStatus.New ? "bg-danger" :
            issue.Status == IssueStatus.InProgress ? "bg-warning text-dark" :
            "bg-success";

            <div class="list-group-item p-3 @borderClass">
                <!-- TOP ROW -->
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div class="d-flex align-items-center gap-3 flex-wrap">
                        <span class="badge @badgeClass">
                            @issue.Status
                        </span>

                        <strong>@issue.TypeKey</strong>

                        @if (issue.Room != null)
                        {
                            <span class="badge bg-secondary">
                                Room @issue.Room.Number
                            </span>
                        }

                        <small class="text-muted">
                            @issue.CreatedAt.ToShortTimeString()
                        </small>
                    </div>

                    <!-- ACTIONS -->
                    <div class="d-flex gap-2">
                        @if (issue.Status == IssueStatus.New)
                        {
                            <form asp-action="Acknowledge" method="post" class="mb-0">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@issue.Id" />
                                <button class="btn btn-warning btn-sm">
                                    👀 Acknowledge
                                </button>
                            </form>
                        }

                        @if (issue.Status != IssueStatus.Resolved)
                        {
                            <form asp-action="Resolve" method="post" class="mb-0">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@issue.Id" />
                                <button class="btn btn-success btn-sm">
                                    ✔ Resolve
                                </button>
                            </form>
                        }
                    </div>
                </div>

                <!-- DETAILS -->
                @if (!string.IsNullOrWhiteSpace(issue.Description))
                {
                    <div class="text-muted">
                        @issue.Description
                    </div>
                }
            </div>
        }
    </div>
}

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.7/signalr.min.js"></script>

    <audio id="newRequestSound" preload="auto">
        <source src="@Url.Content("~/sounds/notification-bar.mp3")" type="audio/mpeg" />
    </audio>

    <script>
        // Unlock audio after first click (required by browsers)
        document.addEventListener("click", async () => {
            const sound = document.getElementById("newRequestSound");
            if (!sound) return;

            try {
                sound.volume = 0.8;
                await sound.play();
                sound.pause();
                sound.currentTime = 0;
                console.log("Security audio unlocked ✅");
            } catch (e) {
                console.warn("Security audio unlock failed:", e);
            }
        }, { once: true });

        const hkConnection = new signalR.HubConnectionBuilder()
            .withUrl("/hotelHub")
            .withAutomaticReconnect()
            .build();

        hkConnection.on("RoomIssueCreated", async (data) => {
            console.log("✅ RoomIssueCreated received (HK):", data);

            const category = data.Category ?? data.category;
            if (category !== "Security") return;

            // 🔊 play sound
            const sound = document.getElementById("newRequestSound");
            if (sound) {
                try {
                    sound.currentTime = 0;
                    await sound.play();
                } catch (err) {
                    console.warn("Autoplay blocked (HK)!", err);
                }
            }

            // 🔁 refresh
            setTimeout(() => location.reload(), 600);
        });

        hkConnection.start()
            .then(() => console.log("✅ SignalR connected (Security)"))
            .catch(err => console.error("❌ SignalR connect failed (HK):", err));
    </script>
}