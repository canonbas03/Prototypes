@model IEnumerable<HotelMVCPrototype.Models.GuestAssignment>

<h2>Guest Assignments</h2>

<form asp-action="Create" method="get" class="d-flex align-items-end gap-2 mb-4">
    <div>
        <label for="roomSelector" class="form-label">Select Room</label>
        <div class="d-flex align-items-end gap-2">
            <select id="roomSelector" name="roomId" class="form-select" required>
                <option value="">-- Select room --</option>
                @foreach (var room in ViewBag.AvailableRooms)
                {
                    <option value="@room.Id">@room.Number</option>
                }
            </select>
            <div>
                <button type="submit" class="btn btn-success text-nowrap">Check-In Guest</button>
            </div>
        </div>
    </div>
    

</form>




   
        @if(Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Guest</th>
                <th>Room</th>
                <th>Check-In</th>
                <th>Check-Out</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var stay in Model)
            {
                <tr>
                    <!-- Guests -->
                    <td>
                        @foreach (var guest in stay.Guests)
                        {
                            <div>
                                <strong>@guest.FirstName @guest.LastName</strong>
                            </div>
                        }
                    </td>

                    <!-- Room -->
                    <td>@stay.Room.Number</td>

                    <!-- Dates -->
                    <td>@stay.CheckInDate.ToShortDateString()</td>
                    <td>@stay.CheckOutDate.ToShortDateString()</td>

                    <!-- Status -->
                    <td>
                        @(stay.IsActive ? "Active" : "Completed")
                    </td>

                    <!-- Actions -->
                    <td>
                        @if (stay.IsActive)
                        {
                            <a asp-action="CheckOut"
                               asp-route-id="@stay.Id"
                               class="btn btn-warning btn-sm">
                                Check Out
                            </a>
                        }
                    </td>
                </tr>
            }
            </tbody>

</table>
        }
        else
        {
        <div class="d-flex justify-content-center align-content-center">
            <p>Currently, there are no guests in the hotel.</p>
        </div>
        }
    
