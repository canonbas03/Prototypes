@model HousekeepingDashboardViewModel

@{
    ViewData["Title"] = "Housekeeping";
}



<h2>Housekeeping Dashboard</h2>

<div class="row mb-4">
    <div class="col-md-8">
        <partial name="_RoomStatistics" model="Model.RoomStatistics" />

        <partial name="_RoomMap" model="Model.RoomMapPage" />


    </div>

    <div class="col-md-4" id="cleanings-container">
        @await Html.PartialAsync("_TodaysCleanings", Model.TodaysCleanings)
    </div>
</div>


<h2>Rooms That Need Cleaning</h2>

@if (!Model.Rooms.Any())
{
    <p class="text-muted">No rooms currently need cleaning.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Room Number</th>
                <th>Type</th>
                <th>Issue</th>
                <th>Notes</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var room in Model.Rooms)
            {
                <tr>
                    <td>@room.Number</td>
                    <td>@room.Type</td>
                    <td class="text-muted">
                        @{
                            var type = Model.OpenHousekeepingIssues
                            .FirstOrDefault(i => i.RoomId == room.Id)?.TypeKey;
                        }
                        @(string.IsNullOrWhiteSpace(type) ? "Regular" : type)
                    </td>
                    <td class="text-muted">
                        @{
                            var note = Model.OpenHousekeepingIssues
                            .FirstOrDefault(i => i.RoomId == room.Id)?.Description;
                        }
                        @(string.IsNullOrWhiteSpace(note) ? "—" : note)
                    </td>

                    <td>
                        <div class="d-flex gap-2">
                        <form asp-action="MarkCleaned" method="post">
                            <input type="hidden" name="id" value="@room.Id" />
                            <button class="btn btn-success btn-sm">Mark Cleaned</button>
                        </form>

                        <a class="btn btn-danger btn-sm"
                           asp-controller="SecurityIncidents"
                           asp-action="Create"
                           asp-route-roomId="@room.Id">
                            🚨
                        </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.7/signalr.min.js"></script>

    <audio id="newRequestSound" preload="auto">
        <source src="@Url.Content("~/sounds/notification-bar.mp3")" type="audio/mpeg" />
    </audio>

    <script>
        // Unlock audio after first click (required by browsers)
        document.addEventListener("click", async () => {
            const sound = document.getElementById("newRequestSound");
            if (!sound) return;

            try {
                sound.volume = 0.8;
                await sound.play();
                sound.pause();
                sound.currentTime = 0;
                console.log("Housekeeping audio unlocked ✅");
            } catch (e) {
                console.warn("Housekeeping audio unlock failed:", e);
            }
        }, { once: true });

        const hkConnection = new signalR.HubConnectionBuilder()
            .withUrl("/hotelHub")
            .withAutomaticReconnect()
            .build();

        hkConnection.on("RoomIssueCreated", async (data) => {
            console.log("✅ RoomIssueCreated received (HK):", data);

            const category = data.Category ?? data.category;
            if (category !== "Housekeeping") return;

            // 🔊 play sound
            const sound = document.getElementById("newRequestSound");
            if (sound) {
                try {
                    sound.currentTime = 0;
                    await sound.play();
                } catch (err) {
                    console.warn("Autoplay blocked (HK)!", err);
                }
            }

            // 🔁 refresh
            setTimeout(() => location.reload(), 600);
        });

        hkConnection.start()
            .then(() => console.log("✅ SignalR connected (Housekeeping)"))
            .catch(err => console.error("❌ SignalR connect failed (HK):", err));
    </script>
}
