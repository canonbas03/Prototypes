@model HousekeepingDashboardViewModel

@{
    ViewData["Title"] = "Housekeeping";
}



<h2>Housekeeping Dashboard</h2>

<div class="row mb-4">
    <div class="col-md-8">
        <partial name="_RoomStatistics" model="Model.RoomStatistics" />

        <partial name="_RoomMap" model="Model.RoomMapPage" />


    </div>

    <div class="col-md-4" id="cleanings-container">
        @await Html.PartialAsync("_TodaysCleanings", Model.TodaysCleanings)
    </div>
</div>


<h2>Rooms That Need Cleaning</h2>

@if (!Model.Rooms.Any())
{
    <p class="text-muted">No rooms currently need cleaning.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Room Number</th>
                <th>Type</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model.Rooms)
            {
                <tr>
                    <td>@room.Number</td>
                    <td>@room.Type</td>
                    <td>
                        <div class="d-flex gap-2">
                        <form asp-action="MarkCleaned" method="post">
                            <input type="hidden" name="id" value="@room.Id" />
                            <button class="btn btn-success btn-sm">Mark Cleaned</button>
                        </form>

                        <a class="btn btn-danger btn-sm"
                           asp-controller="SecurityIncidents"
                           asp-action="Create"
                           asp-route-roomId="@room.Id">
                            🚨
                        </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
