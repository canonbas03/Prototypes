@model HotelMVCPrototype.Models.Room
@using HotelMVCPrototype.Models.Enums

<h2>Edit Room</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Number" class="form-label"></label>
        <input asp-for="Number" class="form-control" />
        <span asp-validation-for="Number" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Type" class="form-label"></label>
        <select asp-for="Type" class="form-select">
            @foreach (var type in Enum.GetValues(typeof(RoomType)))
            {
                <!option value="@type" @(type.Equals(Model.Type) ? "selected" : "")>@type</!option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-select">
            @foreach (var status in Enum.GetValues(typeof(RoomStatus)))
            {
                <!option value="@status" @(status.Equals(Model.Status) ? "selected" : "")>@status</!option>
            }
        </select>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="IsDND" class="form-check-input" />
        <label asp-for="IsDND" class="form-check-label"></label>
    </div>

    <div class="mb-3">
        <label asp-for="Notes" class="form-label"></label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
